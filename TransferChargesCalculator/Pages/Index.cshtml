@page
@model IndexModel
@{
    ViewData["Title"] = "Transaction Charges Calculator";
}

<br />
<div class="">
    <div class="">
        <div class="form-group row col-sm-5">
            <label class="col-md-2 col-form-label mr-3">Amount</label>
            <div class="col-md-8 ">
                <input class="form-control" placeholder="Enter amount" />
                <span class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row col-sm-5">
            <label class="col-md-2 col-form-label mr-3"></label>
            <div class="col-md-8">
                <button type="submit" class="btn btn-primary">Calculate</button>
                <button type="reset" class="btn btn-danger">Reset</button>
            </div>
        </div>
    </div>
</div>