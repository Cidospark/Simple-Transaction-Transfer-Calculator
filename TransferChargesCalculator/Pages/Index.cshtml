@page
@model IndexModel
@{
    ViewData["Title"] = "Transaction Charges Calculator";
}

<div class="mt-5 form-body">
    <br/><br/>
         <div class="container">
             <form method="post">
                 <div class="form-group col-sm-5">
                     <div class="">
                         <h5><p><span style="color:#333; font-weight:bold; ">Enter amount to be transferred</span></p></h5>
                         <input asp-for="Transfer" class="form-control ml=0" min="1" placeholder="Amount..." value="null" />
                         <span asp-validation-for="Transfer" class="text-danger"></span>
                     </div>
                 </div>

                 <div class="form-group row col-sm-5 mt-4">
                     <div class="col-md-8">
                         <button type="submit" class="btn btn-primary">Calculate</button>
                         <button type="reset" class="btn btn-danger">Reset</button>
                     </div>
                 </div>
             </form>
             @if (ViewData["result"] != null)
             {
                 <div class="col-sm-5 ml-3 pl-0 mt-5 animated2 fadeInDown " style="border-top:2px solid #0f0;">
                 </div>
                 <div class="col-sm-5 ml-3 pl-0 mt-2">
                     <div class="text-success animated2 fadeInUp "><b><em>The calculated transfer charge would be...</em></b></div>
                     <br/>
                     <div class="animated3 fadeInDown">Transferred amount :  &#8358;@ViewData["tranferAmount"]</div>
                     <div class="animated3 fadeInDown">Transfer charged : &#8358;@ViewData["result"]</div>
                 </div>
             }
         </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}